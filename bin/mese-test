#!/usr/bin/env node

const path = require('path');
const program = require('commander');
const test = require('../lib/jest');

program
  .option('-d, --directory [directory]', '测试的目录', './')
  .parse(process.argv);

const dir = path.resolve(process.cwd(), program.directory);
test(dir, function () {
  console.log('[Mese] Tested successfully.');
});