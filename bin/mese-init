#!/usr/bin/env node

const path = require('path');
const program = require('commander');
const fse = require('fs-extra');

program
  .option('-d, --directory [directory]', '初始化的目录', './')
  .parse(process.argv);

const dir = path.resolve(process.cwd(), program.directory);

fse.copySync(path.join(__dirname, '../example'), dir);
console.log('[Mese] Initialized successfully.');
