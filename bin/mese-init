#!/usr/bin/env node

const path = require('path');
const program = require('commander');
const init = require('../src/libInit/init');

program
  .option('-d, --directory [directory]', '初始化的目录', './')
  .parse(process.argv);

const dir = path.resolve(process.cwd(), program.directory);
init(dir, function () {
  console.log('[Mese] Initialized successfully.');
});